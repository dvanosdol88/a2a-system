# A2A System Configuration
# Copy this file to .env and update with your values

# Server Configuration
A2A_JULES_HOST=0.0.0.0
A2A_JULES_PORT=5006
A2A_DASHBOARD_HOST=0.0.0.0
A2A_DASHBOARD_PORT=5003

# API URLs (update for production)
A2A_JULES_API_URL=http://localhost:5006
A2A_CODEX_API_URL=http://localhost:5007

# Database Configuration
A2A_DB_TYPE=sqlite  # or postgresql
A2A_DATABASE_URL=a2a_system.db  # or postgresql://user:pass@host:port/dbname

# Security (REQUIRED for production)
A2A_SECRET_KEY=your-secret-key-here
A2A_ENABLE_AUTH=false  # Set to true in production
A2A_API_KEY_HEADER=X-API-Key

# Rate Limiting
A2A_RATE_LIMIT_ENABLED=false  # Set to true in production
A2A_RATE_LIMIT_DEFAULT=100

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=your-github-username

# Logging
A2A_LOG_LEVEL=INFO
A2A_ENVIRONMENT=development

# Debug Mode
A2A_DEBUG=false